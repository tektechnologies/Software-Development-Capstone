<Window x:Class="Presentation.frmConfirmAction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Confirm" Height="200" Width="400">
    <Window.Resources>
        <ResourceDictionary Source="Stylesheet.xaml"/>
    </Window.Resources>
    <Grid Style="{StaticResource DefaultPage}">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="lblPrompt" Grid.Row="0" Content="" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10 0" MaxWidth="380" Width="380" ></Label>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnExit" Grid.Column="0" Content="Cancel" Margin="10 10 10 0" Click="BtnExit_Click"></Button>
            <Button x:Name="btnSubmit" Grid.Column="2" Content="Confirm" Margin="10 10 10 0" Click="BtnSubmit_Click"></Button>
        </Grid>
    </Grid>
</Window>
