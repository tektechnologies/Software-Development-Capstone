        <Setter Property="IsReadOnly" Value="True"/>
    </Style>



    <!-- Content Styles -->
    <!-- Filter bar-->
    <Style TargetType="Grid" x:Key="FilterBar">
        <!-- Bar Properties -->
        <Setter Property="Background" Value="{StaticResource Teal}"/>
