<Window x:Class="Presentation.EditLuggage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Edit Luggage" Height="150" Width="400">
    <Window.Resources>
        <ResourceDictionary Source="Stylesheet.xaml"/>
    </Window.Resources>

    <Grid Style="{StaticResource DefaultPage}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Status:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button x:Name="btnSave" Grid.Column="1" Grid.Row="1" Content="Save" Margin="56 10" Click="btnSave_Click"/>
        <ComboBox x:Name="cboStatus" Grid.Column="1" Grid.Row="0" Margin="10" VerticalContentAlignment="Center"/>
        <Button x:Name="btnCancel" Grid.Column="0" Grid.Row="1" Content="Cancel" Margin="10" Click="btnCancel_Click"/>
    </Grid>
</Window>
